<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="reply">

	<!-- 댓글 달기 -->
	<insert id="writeReplyProcess" parameterType="com.tjoeun.spring.dto.ReplyDTO" useGeneratedKeys="true" keyProperty="replyNo">
		insert into reply(postNo, replyContent, replyWriter, replyRegDate) 
				values(#{postNo}, #{replyContent}, #{replyWriter}, Now())
	</insert>


	<!-- 댓글 목록 가져오기 -->
	<select id="replyList" parameterType="java.lang.Integer" resultType="com.tjoeun.spring.dto.ReplyDTO">
		select * from reply where postNo = #{postNo}        
	</select>
	
	
	
	
	
	
	









</mapper>